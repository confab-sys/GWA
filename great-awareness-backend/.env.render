# Production Environment Variables for Render
# These will be set automatically in Render dashboard

# Database Configuration
# DATABASE_URL_RENDER will be set automatically by Render from your PostgreSQL database

# Security Settings
SECRET_KEY=your-super-secret-production-key-here-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Environment
ENVIRONMENT=production
DEBUG=False

# CORS Settings - Update with your actual frontend URLs
CORS_ORIGINS=["https://your-frontend-domain.com", "https://your-frontend-domain.onrender.com"]

# File Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/jpg"]

# Render will automatically set:
# - PORT (the port your app should listen on)
# - DATABASE_URL_RENDER (connection string for your PostgreSQL database)