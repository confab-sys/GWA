# Database Configuration
# SQLite for development, PostgreSQL for production
DATABASE_URL=sqlite:///./psychology_app.db
DATABASE_URL_RENDER=postgresql://username:password@your-render-db-url:5432/psychology_app_db

# Security Settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Environment
ENVIRONMENT=development
DEBUG=True

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "https://your-frontend-url.com"]

# Email Settings (for future email verification)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload Settings (for future profile images)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/jpg"]